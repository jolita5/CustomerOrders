<Window x:Class="CustomerOrders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerOrders"
        mc:Ignorable="d"
         Title="MakeOrder" Height="600" Width="900">
    <Window.Background>
        <ImageBrush ImageSource="Image/Sports.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name ="MakeOrderButton" Click="MakeOrderButton_Click" Margin="0 0 10 0" Height="20" Grid.Column="0" Content ="Make order"/>
        <Button x:Name ="HistoryButton" Click ="HistoryButton_Click" Grid.Column="1" Content ="History" Height="20" VerticalAlignment="Center"/>
        <Button x:Name ="Your_AccountButton" Click="Your_AccountButton_Click" Margin="10 0 0 0 " Height="20" Grid.Column="2" Content ="Your Account" />



    </Grid>
</Window>